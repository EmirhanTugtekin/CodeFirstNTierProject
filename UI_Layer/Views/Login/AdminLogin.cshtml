
@{
    ViewBag.Title = "AdminLogin";
    
}


<section class="main-content-w3layouts-agileits">
    <div class="container">
        
        <div class="row inner-sec">
            
            <div class="login p-5 bg-light mx-auto mw-100">
                <h3 class="tittle">Admin Giriş Sayfası</h3>
                <form action="#" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">Email address</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" name="AdminName" aria-describedby="emailHelp" placeholder="" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifre</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" name="AdminPassword" placeholder="" required="">
                    </div>
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Beni hatırla</label>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
                    <p><a href="/Register/RegisterCompany/"> Hesabın yok mu?</a></p>
                </form>
            </div>
        </div>
    </div>
</section>

