@using Entity_Layer
@model Product

@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@*Html Helpers - @Html.Textboxfor *@

@*Tag Helplers - Asp-For="ndkjfkjsdkfs"*@


<div class="container">
    <h2>Yeni Ürün Ekleme Sayfası</h2>
    <form method="post">
        <label>Ürün Adı</label>
        @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
        <br />
        <label>Ürün Stoğu</label>
        @Html.TextBoxFor(x => x.ProductStock, new { @class = "form-control" })
        <br />
        <label>Ürün Fiyatı</label>
        @Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control" })
        <br />
        <label>Ürün Kategorisi</label>
        @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
        <br />
        <button class="btn btn-outline-info" onclick="">Ürünü Kaydet</button>
    </form>
</div>